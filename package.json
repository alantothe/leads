{
  "name": "tubro",
  "packageManager": "bun@1.3.0",
  "private": true,
  "scripts": {
    "dev": "docker compose up -d && turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "docker:start": "docker compose up -d",
    "docker:stop": "docker compose down",
    "docker:logs": "docker compose logs -f libretranslate",
    "docker:restart": "docker compose restart libretranslate"
  },
  "workspaces": [
    "apps/*"
  ],
  "devDependencies": {
    "turbo": "^2.7.3"
  }
}
